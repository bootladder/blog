#!/bin/bash

echo cd jekyll
cd jekyll

echo zipping the site
zip -r sitesource.zip *
mv sitesource.zip /tmp/
ls

echo curling the site
#curl -F 'file=@/tmp/sitesource.zip' http://freejekyllbuilder.com/upload/bootladder-blog
#curl -F 'file=@/tmp/sitesource.zip' http://45.77.4.146:9004/upload/bootladder-blog
curl -F 'file=@/tmp/sitesource.zip' $(echo $TRAVIS_FREEJEKYLLBUILDER_URL)/upload/bootladder-blog
sleep 2

echo triggering prod webhook
curl https://ccram.org:5000/bootladder-blog

